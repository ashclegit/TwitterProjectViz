<!-- Bio -->
<div class="panel panel-default republican row">
  <div class="panel-heading">
    <h3 class="panel-title">Bio</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4 col-xs-4">
        <img src="<%= asset_path 'trump-portrait.jpg' %>" alt="Donald Trump Portrait"
             class="img-responsive"/>
      </div>
      <div class="list-group col-md-8 col-xs-8">

        <span class="list-group-item">
          <h5 class="list-group-item-heading">Donald John Trump</h5>
          <p class="list-group-item-text">Born: June 14, 1946 (age 70)<br />Queens, New York City, U.S.</p>
        </span>

        <span class="list-group-item">
          <h5 class="list-group-item-heading">Education</h5>
          <p class="list-group-item-text">Fordham University<br />University of Pennsylvania</p>
        </span>

        <span class="list-group-item">
          <h5 class="list-group-item-heading">Prior Political Experience</h5>
          <p class="list-group-item-text">
            <ul>
              <li>Has not held a prior political office</li>
              <li>Estimated Net Worth of $3.7 Billion USD</li>
              <li>Entrepreneur, entertainer, and businessman</li>
            </ul>
          </p>
        </span>

        <a href="http://www.nytimes.com/interactive/2016/us/elections/donald-trump-on-the-issues.html"
           class="btn btn-republican btn-block list-group-item">
          NY Times Issue Tracker
        </a>

      </div>
    </div>
  </div>
</div>
