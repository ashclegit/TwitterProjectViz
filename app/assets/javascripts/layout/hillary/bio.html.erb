<!-- Bio -->
<div class="panel panel-default democrat row">
  <div class="panel-heading">
    <h3 class="panel-title">Bio</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4 col-xs-12 horizontal-center">
        <img src="<%= asset_path('hillary-portrait.jpg') %>" alt="Hillary Clinton Portrait"
             class="img-responsive"/>
      </div>
      <div class="list-group col-md-8 col-xs-12">

        <span class="list-group-item">
          <h5 class="list-group-item-heading">Hillary Rodham Clinton</h5>
          <p class="list-group-item-text">Born: October 26, 1947 (age 69)<br />Chicago, Illinois, U.S.</p>
        </span>

        <span class="list-group-item">
          <h5 class="list-group-item-heading">Education</h5>
          <p class="list-group-item-text">Wellesley College<br />Yale University</p>
        </span>

        <span class="list-group-item">
          <h5 class="list-group-item-heading">Prior Political Experience</h5>
          <p class="list-group-item-text">
            <ul>
              <li>67th United States Secretary of State</li>
              <li>United States Senator from New York</li>
              <li>First Lady of the United States</li>
            </ul>
          </p>
        </span>

        <a href="http://www.nytimes.com/interactive/2016/us/elections/hillary-clinton-on-the-issues.html"
           class="btn btn-democrat btn-block list-group-item">
          NY Times Issue Tracker
        </a>

      </div>
    </div>
  </div>
</div>
